<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">

    <block.guess.widget.toolbar.BaseToolBar
        android:id="@id/toolbar_base"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@id/edit_account"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_rectangle_f3f4fa_r12"
        android:drawableLeft="@mipmap/ic_address"
        android:drawablePadding="@dimen/dp_12"
        android:hint="@string/receive_address"
        android:inputType="text"
        android:paddingLeft="@dimen/dp_12"
        android:textColor="@color/color_00115d"
        android:textColorHint="@color/color_586085"
        android:textSize="@dimen/dp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_base" />

    <ImageView
        android:id="@id/img_scan"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_12"
        android:background="@mipmap/ic_scan"
        app:layout_constraintBottom_toBottomOf="@id/edit_account"
        app:layout_constraintRight_toRightOf="@id/edit_account"
        app:layout_constraintTop_toTopOf="@id/edit_account" />

    <EditText
        android:id="@id/edit_email"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shape_rectangle_f3f4fa_r12"
        android:drawableLeft="@mipmap/ic_email"
        android:drawablePadding="@dimen/dp_12"
        android:hint="@string/receive_email"
        android:inputType="textEmailAddress"
        android:paddingLeft="@dimen/dp_12"
        android:textColor="@color/color_00115d"
        android:textColorHint="@color/color_586085"
        android:textSize="@dimen/dp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_account" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/tips_order_awarded"
        android:textColor="@color/color_8a94be"
        android:textSize="@dimen/dp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_email" />

    <TextView
        android:id="@id/txt_gift"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_50"
        android:layout_marginBottom="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_60"
        android:background="@drawable/shape_rectangle_645aff_r12"
        android:gravity="center"
        android:text="@string/gift"
        android:textColor="@color/color_white"
        android:textSize="@dimen/dp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_email" />
</androidx.constraintlayout.widget.ConstraintLayout>