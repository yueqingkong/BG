<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_210"
    android:background="@drawable/shape_rectangle_white_r12">

    <TextView
        android:id="@id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="@string/edit_miner_fee"
        android:textColor="@color/color_00115d"
        android:textSize="@dimen/dp_17"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@id/view_centre"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_110"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/shape_rectangle_f3f4fa_d2d8f1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_title" />

    <EditText
        android:id="@id/edit_amount"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:background="@drawable/shape_rectangle_white_r12"
        android:gravity="center_vertical"
        android:hint="0.00000200~0.00001500"
        android:paddingLeft="@dimen/dp_12"
        android:textColorHint="@color/color_586085"
        android:textColor="@color/color_00115d"
        android:textSize="@dimen/dp_16"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_12"
        android:text="BCH"
        android:textColor="@color/color_00115d"
        android:textSize="@dimen/dp_16"
        app:layout_constraintBottom_toBottomOf="@id/edit_amount"
        app:layout_constraintRight_toRightOf="@id/edit_amount"
        app:layout_constraintTop_toTopOf="@id/edit_amount" />

    <TextView
        android:id="@id/txt_left"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_50"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/color_645aff"
        android:textSize="@dimen/dp_17"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/txt_right"
        app:layout_constraintTop_toBottomOf="@id/view_centre" />

    <View
        android:layout_width="@dimen/px_1"
        android:layout_height="@dimen/dp_50"
        android:background="@color/color_d2d8f1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_left" />

    <TextView
        android:id="@id/txt_right"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_50"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/color_645aff"
        android:textSize="@dimen/dp_17"
        app:layout_constraintLeft_toRightOf="@id/txt_left"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_centre" />
</androidx.constraintlayout.widget.ConstraintLayout>