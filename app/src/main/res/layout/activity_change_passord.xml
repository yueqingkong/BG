<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">

    <block.guess.widget.toolbar.BaseToolBar
        android:id="@id/toolbar_base"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/change_password"
        android:textColor="@color/color_00115d"
        android:textColorHint="@color/color_586085"
        android:textSize="@dimen/dp_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_base" />

    <EditText
        android:id="@id/edit_password_old"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_85"
        android:background="@drawable/shape_rectangle_f3f4fa_r12"
        android:drawableLeft="@mipmap/ic_password"
        android:drawablePadding="@dimen/dp_12"
        android:hint="@string/old_password"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/dp_12"
        android:textColor="@color/color_00115d"
        android:textColorHint="@color/color_586085"
        android:textSize="@dimen/dp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_base" />

    <EditText
        android:id="@id/edit_password_new"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shape_rectangle_f3f4fa_r12"
        android:drawableLeft="@mipmap/ic_username"
        android:drawablePadding="@dimen/dp_12"
        android:hint="@string/new_password"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/dp_12"
        android:textColor="@color/color_00115d"
        android:textColorHint="@color/color_586085"
        android:textSize="@dimen/dp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_password_old" />

    <TextView
        android:id="@id/txt_change_now"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/shape_rectangle_645aff_r12"
        android:gravity="center"
        android:text="@string/change_now"
        android:textColor="@color/color_white"
        android:textSize="@dimen/dp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_password_new" />
</androidx.constraintlayout.widget.ConstraintLayout>