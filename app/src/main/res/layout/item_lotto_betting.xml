<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@id/view_betting_delete"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@mipmap/btn_bet_delete_outline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@id/txt_ball_first"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginStart="@dimen/dp_10"
        android:background="@drawable/shape_oval_e1615d"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:textSize="@dimen/dp_13"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/view_betting_delete"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@id/txt_ball_second"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginStart="@dimen/dp_12"
        android:background="@drawable/shape_oval_e1615d"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:textSize="@dimen/dp_13"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/txt_ball_first"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@id/txt_ball_third"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginStart="@dimen/dp_12"
        android:background="@drawable/shape_oval_e1615d"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:textSize="@dimen/dp_13"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/txt_ball_second"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@id/txt_ball_fourth"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginStart="@dimen/dp_12"
        android:background="@drawable/shape_oval_e1615d"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:textSize="@dimen/dp_13"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/txt_ball_third"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@id/txt_ball_fifth"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginStart="@dimen/dp_12"
        android:background="@drawable/shape_oval_e1615d"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:textSize="@dimen/dp_13"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/txt_ball_fourth"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@id/txt_ball_sixth"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginStart="@dimen/dp_12"
        android:background="@drawable/shape_oval_e1615d"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:textSize="@dimen/dp_13"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/txt_ball_fifth"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@id/txt_ball_purple"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginStart="@dimen/dp_12"
        android:background="@drawable/shape_oval_645aff"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:textSize="@dimen/dp_13"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/txt_ball_sixth"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@id/view_detail"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:background="@mipmap/ic_bet_glyph"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>