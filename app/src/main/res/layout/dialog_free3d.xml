<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_343"
    android:layout_height="@dimen/dp_340">

    <ImageView
        android:id="@id/img_close"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:background="@mipmap/btn_popup_close"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_280"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/shape_gradual_fa5a34_r12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_close">

        <ImageView
            android:id="@id/img_backgroud"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_86"
            android:layout_marginEnd="@dimen/dp_23"
            android:layout_marginStart="@dimen/dp_23"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@mipmap/img_popup_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_9"
            android:text="@string/novice_award"
            android:textColor="@color/color_feeeb1"
            android:textSize="@dimen/dp_28"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/img_backgroud"
            app:layout_constraintRight_toRightOf="@id/img_backgroud"
            app:layout_constraintTop_toTopOf="@id/img_backgroud" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_14"
            android:text="@string/novice_free_3d_every_day"
            android:textColor="@color/color_fff0b3"
            android:textSize="@dimen/dp_12"
            app:layout_constraintBottom_toBottomOf="@id/img_backgroud"
            app:layout_constraintLeft_toLeftOf="@+id/img_backgroud"
            app:layout_constraintRight_toRightOf="@id/img_backgroud" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_1"
            android:layout_marginEnd="@dimen/dp_49"
            android:layout_marginStart="@dimen/dp_49"
            android:layout_marginTop="@dimen/dp_18"
            android:background="@color/color_e43a21"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_backgroud" />

        <TextView
            android:id="@id/txt_count_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/shape_rectangle_eb2b23_r10"
            android:paddingBottom="@dimen/dp_2"
            android:paddingEnd="@dimen/dp_17"
            android:paddingStart="@dimen/dp_17"
            android:paddingTop="@dimen/dp_2"
            android:text="@string/countdown_distance_award"
            android:textColor="@color/color_fedd59"
            android:textSize="@dimen/dp_13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_backgroud" />

        <TextView
            android:id="@id/txt_hour_"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_46"
            android:layout_marginEnd="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_11"
            android:background="@drawable/shape_rectangle_eb2a23_r8"
            android:gravity="center"
            android:textColor="@color/color_fedd59"
            android:textSize="@dimen/dp_34"
            app:layout_constraintRight_toLeftOf="@id/txt_hour"
            app:layout_constraintTop_toBottomOf="@id/txt_count_down" />

        <TextView
            android:id="@id/txt_hour"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_46"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_11"
            android:background="@drawable/shape_rectangle_eb2a23_r8"
            android:gravity="center"
            android:textColor="@color/color_fedd59"
            android:textSize="@dimen/dp_34"
            app:layout_constraintRight_toLeftOf="@id/img_time_"
            app:layout_constraintTop_toBottomOf="@id/txt_count_down" />

        <ImageView
            android:id="@id/img_time_"
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_18"
            android:layout_marginEnd="@dimen/dp_6"
            android:background="@mipmap/ic_time_colon"
            app:layout_constraintBottom_toBottomOf="@id/txt_hour_"
            app:layout_constraintRight_toLeftOf="@id/txt_minute_"
            app:layout_constraintTop_toTopOf="@id/txt_hour_" />

        <TextView
            android:id="@id/txt_minute_"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_46"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_11"
            android:background="@drawable/shape_rectangle_eb2a23_r8"
            android:gravity="center"
            android:textColor="@color/color_fedd59"
            android:textSize="@dimen/dp_34"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/txt_minute"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_count_down" />

        <TextView
            android:id="@id/txt_minute"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_46"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_11"
            android:background="@drawable/shape_rectangle_eb2a23_r8"
            android:gravity="center"
            android:textColor="@color/color_fedd59"
            android:textSize="@dimen/dp_34"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@id/txt_minute_"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_count_down" />

        <ImageView
            android:id="@id/img_time"
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_18"
            android:layout_marginStart="@dimen/dp_6"
            android:background="@mipmap/ic_time_colon"
            app:layout_constraintBottom_toBottomOf="@id/txt_hour_"
            app:layout_constraintLeft_toRightOf="@id/txt_minute"
            app:layout_constraintTop_toTopOf="@id/txt_hour_" />

        <TextView
            android:id="@id/txt_second_"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_46"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_11"
            android:background="@drawable/shape_rectangle_eb2a23_r8"
            android:gravity="center"
            android:textColor="@color/color_fedd59"
            android:textSize="@dimen/dp_34"
            app:layout_constraintLeft_toRightOf="@id/img_time"
            app:layout_constraintTop_toBottomOf="@id/txt_count_down" />

        <TextView
            android:id="@id/txt_second"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_46"
            android:layout_marginStart="@dimen/dp_7"
            android:layout_marginTop="@dimen/dp_11"
            android:background="@drawable/shape_rectangle_eb2a23_r8"
            android:gravity="center"
            android:textColor="@color/color_fedd59"
            android:textSize="@dimen/dp_34"
            app:layout_constraintLeft_toRightOf="@id/txt_second_"
            app:layout_constraintTop_toBottomOf="@id/txt_count_down" />

        <TextView
            android:id="@id/txt_receive"
            android:layout_width="@dimen/dp_135"
            android:layout_height="@dimen/dp_34"
            android:layout_marginBottom="@dimen/dp_28"
            android:background="@drawable/shape_rectangle_gradual_ffe635_fec818_r18"
            android:gravity="center"
            android:text="@string/go_to_receive"
            android:textColor="@color/color_c96214"
            android:textSize="@dimen/dp_15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>