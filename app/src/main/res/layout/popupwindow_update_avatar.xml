<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@id/view_top"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:background="@color/color_4c07052b"
        app:layout_constraintBottom_toTopOf="@id/txt_takephoto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/px_1"
        android:background="@color/color_d2d8f1"
        app:layout_constraintBottom_toTopOf="@id/txt_takephoto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@id/txt_takephoto"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_50"
        android:background="@color/color_fafafa"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/dp_32"
        android:text="@string/take_photo"
        android:textColor="@color/color_00115d"
        android:textSize="@dimen/dp_16"
        app:layout_constraintBottom_toTopOf="@id/txt_album"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/px_1"
        android:background="@color/color_d2d8f1"
        app:layout_constraintBottom_toTopOf="@id/txt_album"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@id/txt_album"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/px_1"
        android:background="@color/color_fafafa"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/dp_32"
        android:text="@string/album_select"
        android:textColor="@color/color_00115d"
        android:textSize="@dimen/dp_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>