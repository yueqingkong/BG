<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@id/txt_ranking_order"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_29"
        android:layout_marginTop="@dimen/dp_29"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <block.guess.widget.roundedimageview.RoundedImageView
        android:id="@id/img_ranking_avatar"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/txt_ranking_order"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="@dimen/dp_90" />

    <TextView
        android:id="@id/txt_ranking_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_24"
        android:maxLines="1"
        android:textColor="@color/color_00115d"
        android:textSize="@dimen/dp_14"
        app:layout_constraintLeft_toRightOf="@id/img_ranking_avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@id/txt_ranking_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_6"
        android:background="@drawable/shape_rectangle_f3f4fa_r4"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_6"
        android:paddingRight="@dimen/dp_6"
        android:textColor="@color/color_8a94be"
        android:textSize="@dimen/dp_12"
        app:layout_constraintLeft_toRightOf="@id/img_ranking_avatar"
        app:layout_constraintTop_toBottomOf="@id/txt_ranking_name" />

    <TextView
        android:id="@id/txt_ranking_win"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_00115d"
        android:textSize="@dimen/dp_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>