<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_343"
    android:layout_height="@dimen/dp_280"
    android:background="@drawable/shape_rectangle_white_r12">

    <ImageView
        android:id="@id/img_captcha"
        android:layout_width="@dimen/dp_240"
        android:layout_height="@dimen/dp_80"
        android:layout_marginTop="@dimen/dp_30"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@id/edit_captcha_first"
        android:layout_width="@dimen/dp_38"
        android:layout_height="@dimen/dp_58"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/selector_rectangle_645aff_white_r6_edit"
        android:gravity="center"
        android:inputType="number"
        android:textColorHint="@color/color_586085"
        android:textColor="@color/color_645aff"
        android:textStyle="bold"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/edit_captcha_second"
        app:layout_constraintTop_toBottomOf="@id/img_captcha" />

    <EditText
        android:id="@id/edit_captcha_second"
        android:layout_width="@dimen/dp_38"
        android:layout_height="@dimen/dp_58"
        android:layout_marginStart="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/selector_rectangle_645aff_white_r6_edit"
        android:gravity="center"
        android:inputType="number"
        android:textColorHint="@color/color_586085"
        android:textColor="@color/color_645aff"
        android:textStyle="bold"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@id/edit_captcha_first"
        app:layout_constraintRight_toLeftOf="@id/edit_captcha_third"
        app:layout_constraintTop_toBottomOf="@id/img_captcha" />

    <EditText
        android:id="@id/edit_captcha_third"
        android:layout_width="@dimen/dp_38"
        android:layout_height="@dimen/dp_58"
        android:layout_marginStart="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/selector_rectangle_645aff_white_r6_edit"
        android:gravity="center"
        android:inputType="number"
        android:textColorHint="@color/color_586085"
        android:textColor="@color/color_645aff"
        android:textStyle="bold"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@id/edit_captcha_second"
        app:layout_constraintRight_toLeftOf="@id/edit_captcha_fourth"
        app:layout_constraintTop_toBottomOf="@id/img_captcha" />

    <EditText
        android:id="@id/edit_captcha_fourth"
        android:layout_width="@dimen/dp_38"
        android:layout_height="@dimen/dp_58"
        android:layout_marginStart="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/selector_rectangle_645aff_white_r6_edit"
        android:gravity="center"
        android:inputType="number"
        android:textColorHint="@color/color_586085"
        android:textColor="@color/color_645aff"
        android:textStyle="bold"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@id/edit_captcha_third"
        app:layout_constraintRight_toLeftOf="@id/edit_captcha_fifth"
        app:layout_constraintTop_toBottomOf="@id/img_captcha" />

    <EditText
        android:id="@id/edit_captcha_fifth"
        android:layout_width="@dimen/dp_38"
        android:layout_height="@dimen/dp_58"
        android:layout_marginStart="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/selector_rectangle_645aff_white_r6_edit"
        android:gravity="center"
        android:inputType="number"
        android:textColorHint="@color/color_586085"
        android:textColor="@color/color_645aff"
        android:textStyle="bold"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@id/edit_captcha_fourth"
        app:layout_constraintRight_toLeftOf="@id/edit_captcha_sixth"
        app:layout_constraintTop_toBottomOf="@id/img_captcha" />

    <EditText
        android:id="@id/edit_captcha_sixth"
        android:layout_width="@dimen/dp_38"
        android:layout_height="@dimen/dp_58"
        android:layout_marginStart="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/selector_rectangle_645aff_white_r6_edit"
        android:gravity="center"
        android:inputType="number"
        android:textColorHint="@color/color_586085"
        android:textColor="@color/color_645aff"
        android:textStyle="bold"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@id/edit_captcha_fifth"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_captcha" />

    <TextView
        android:id="@id/txt_refresh_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_34"
        android:text="@string/refresh_code"
        android:textColor="@color/color_645aff"
        android:textSize="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_captcha_sixth" />
</androidx.constraintlayout.widget.ConstraintLayout>