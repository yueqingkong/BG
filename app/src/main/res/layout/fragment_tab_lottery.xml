<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">

    <TextView
        android:id="@id/txt_lottery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/lottery"
        android:textColor="@color/color_00115d"
        android:textSize="@dimen/dp_22" />

    <TextView
        android:id="@id/txt_ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_toRightOf="@id/txt_lottery"
        android:text="@string/ranking"
        android:textColor="@color/color_8a94be"
        android:textSize="@dimen/dp_22" />

    <androidx.viewpager.widget.ViewPager
        android:id="@id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txt_lottery"
        android:background="@color/color_f3f4fa" />
</RelativeLayout>
